{
    "manifest_version": 3,
    "name": "Cognitive Load Meter",
    "description": "Measures mental fatigue caused by websites",
    "version": "1.0",
  
    "permissions": ["storage", "tabs", "scripting"],
  
    "background": {
      "service_worker": "background.js"
    },
  
    "action": {
      "default_popup": "popup.html"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"], 
        "run_at": "document_idle"
      }
    ]
  }
  